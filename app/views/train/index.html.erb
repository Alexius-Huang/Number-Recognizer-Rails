<%= content_for :js do %>
  <%= javascript_pack_tag 'bg_canvas' %>
  <%= javascript_pack_tag 'panel' %>
  <%= javascript_pack_tag 'ajax' %>
<% end %>

<canvas id="background-canvas"></canvas>
<div class="canvas-wrapper">
  <canvas id="main-canvas"></canvas>
  <div class="control-panel">
    <div id="shade"></div>
    <div class="button-group">
      <button id="feed">Feed the Machine</button>
      <button id="clear">Clear Canvas</button>
      <button id="train">Train the Machine</button>
      <button id="predict">Predict</button>
    </div>
    <div class="input-group">
      <input type="radio" name="digit" id="digit-0" value="0"> <label for="digit-0">0</label>
      <input type="radio" name="digit" id="digit-1" value="1"> <label for="digit-1">1</label>
      <input type="radio" name="digit" id="digit-2" value="2"> <label for="digit-2">2</label>
      <input type="radio" name="digit" id="digit-3" value="3"> <label for="digit-3">3</label>
      <input type="radio" name="digit" id="digit-4" value="4"> <label for="digit-4">4</label>
      <input type="radio" name="digit" id="digit-5" value="5"> <label for="digit-5">5</label>
      <input type="radio" name="digit" id="digit-6" value="6"> <label for="digit-6">6</label>
      <input type="radio" name="digit" id="digit-7" value="7"> <label for="digit-7">7</label>
      <input type="radio" name="digit" id="digit-8" value="8"> <label for="digit-8">8</label>
      <input type="radio" name="digit" id="digit-9" value="9"> <label for="digit-9">9</label>
    </div>
    <div id="console"></div>
    <div id="prompt">
      <button id="ans-yes">Yes</button>
      <button id="ans-no">No</button>
    </div>
    <div id="submit">
      <button id="submit-result">Submit</button>
    </div>
  </div>
</div>
